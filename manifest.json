{
  "name": "Drifter",
  "version": "0.0.2",
  "manifest_version": 2,
  "description" : "Drifter aimlessly clicks links on a website",
  "icons": { "16": "icons/16x16.png", "48": "icons/48x48.png", "128": "icons/128x128.png" },

  "browser_action": {
    "default_icon": {
      "19": "icons/19x19.png",
      "38": "icons/38x38.png"
    },
    "default_title": "Drifter",
    "default_popup": "browseraction/popup.html"
  },

  "background": {
    "scripts": ["drifter.js", "background.js"],
    "persistent": true
  },

  "permissions": [
    "tabs"
  ],

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ]
}